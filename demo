terraform {
  required_providers {
    juju = {
      version = "0.12.0"
      source  = "juju/juju"
    }
  }
}

provider "juju" {}

resource "juju_model" "demo" {
  name = "demo"

}

resource "juju_application" "wordpress" {
  name = "wordpress"

  model = juju_model.demo.name

  charm {
    name = "wordpress"
    channel = "latest/stable"
  }
  units = 3
}

  application {
    name     = juju_application.wordpress.name
    endpoint = "db"
  }
}
