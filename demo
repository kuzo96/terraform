terraform {
  required_providers {
    juju = {
      version = "0.12.0"
      source  = "juju/juju"
    }
  }
}

provider "juju" {}

resource "juju_model" "demo" {
  name = "demo"

}

resource "juju_application" "mysql" {
  name = "mysql"

  model = juju_model.demo.name

  charm {
    name = "wordpress"
    channel = "latest/stable"
  }
}

